{
	"compilerOptions": {
		"target": "ES2018",
		"strict": true,
		"allowImportingTsExtensions": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"alwaysStrict": true,
		"newLine": "lf",
		"noUnusedLocals": true,
		"noEmit": true,
		"esModuleInterop": true,
		"baseUrl": "src",
		"paths": {
			"*": ["*/_index.ts"]
		}
	},
	"include": [
		"src/**/*"
	]
}

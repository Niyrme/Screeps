{
	"compilerOptions": {
		"target": "ES2018",
		"strict": true,
		"allowImportingTsExtensions": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"alwaysStrict": true,
		"newLine": "lf",
		"noUnusedLocals": true,
		"noEmit": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"paths": {
			"Global": ["src/Global/_index.ts"],
			"Handlers": ["src/Handlers/_index.ts"],
			"Lib": ["src/Lib/_index.ts"],
			"Prototypes": ["src/Prototypes/_index.ts"],
			"SourceMapper": ["src/SourceMapper.ts"],
			"Utils": ["src/Utils/_index.ts"]
		}
	},
	"include": [
		"src/**/*"
	]
}

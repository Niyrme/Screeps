{
	"compilerOptions": {
		"target": "ES2018",
		"strict": true,
		"allowImportingTsExtensions": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"alwaysStrict": true,
		"newLine": "lf",
		"noUnusedLocals": true,
		"noEmit": true,
		"esModuleInterop": true,
		"paths": {
			"Creep": ["src/Creep/_index.ts"],
			"Events": ["src/Events/_index.ts"],
			"Global": ["src/Global/_index.ts"],
			"Lib": ["src/Lib/_index.ts"],
			"Prototypes": ["src/Prototypes/_index.ts"],
			"Room": ["src/Room/_index.ts"],
			"Utils": ["src/Utils/_index.ts"]
		}
	},
	"include": [
		"src/**/*"
	]
}

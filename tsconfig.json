{
	"compilerOptions": {
		"strict": true,
		"allowImportingTsExtensions": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"alwaysStrict": true,
		"newLine": "lf",
		"noUnusedLocals": true,
		"noEmit": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"paths": {
			"*": [
				"src/*/_index.ts"
			]
		}
	},
	"include": [
		"src/**/*"
	]
}
